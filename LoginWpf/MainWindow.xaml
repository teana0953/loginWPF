<Window x:Class="LoginWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="50">
            <Button Name="btn_fbLogin" Width="150" Click="btn_fbLogin_Click">
                <Image Source="logInWithFB.png"/>
            </Button>
            <Button Name="btn_goolgeLogin" Width="150" Margin="5" Click="btn_goolgeLogin_Click">
                <Image Source="btn_google_signin_dark_normal_web.png"></Image>
            </Button>
        </StackPanel>
    </Grid>
</Window>
